<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="emptable">
        <column xsi:type="smallint" name="id_column" padding="10" unsigned="false" nullable="false" identity="true" comment="Entity Id"/>
        <column xsi:type="varchar" name="Name" nullable="false" length="255" comment="Title"/>
        <column xsi:type="varchar" name="Email"  comment="Time of event"/>
        <column xsi:type="varchar" name="Telephone" nullable="true" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id_column"/>
        </constraint>
   </table>
</schema>